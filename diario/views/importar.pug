
doctype html
html
    head
        title Importar
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
        link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='/stylesheets/feed.css')
        style html,body,h1,h2,h3,h4,h5,h6 {font-family: "Roboto", sans-serif}

        script(src='/javascripts/jquery-3.2.1.js')
    
    body
        div(class="w3-content w3-margin-top w3-center" style="max-width:1400px;")
        // The Grid
        div(class="w3-row-padding")
            if status
                p=status
            // Left Column
            form(class="w3-container" action="/importar" method="post" enctype="multipart/form-data" id="forms")
                div(class="w3-third.w3-center")
                    div(class="w3-white.w3-text-grey.w3-card-4")
                        div(class="w3-display-container")
                        p
                            input(type="file" id="ficheiro" name="ficheiro" readonly="readonly")
                        
                        p(class="w3-text-white")
                            input(class="w3-btn w3-teal w3-round" type="submit" value="Importar do ficheiro")
        center
            a(class="w3-button w3-large w3-theme-d4 w3-center" href="/feed" title="voltar")
                i(class="fa fa-home")
                |Voltar       
            br
            // End Left Column
            // End Grid
        // End Page Container
    footer(class="w3-container w3-centered w3-teal w3-center w3-margin-top")

    script.
        