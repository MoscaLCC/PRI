extends layout

block content
  h1(class="w3-text-white") Registo
  p(class="w3-text-grey")=status
  div(style="width:55%;")
    form(action="/signup" class="w3-container w3-card-4" method="post" enctype="multipart/form-data")
        p
          label(class="w3-text-grey") *Nome de Utilizador
          input(type="text" id="username" name="username" placeholder="Username" class="w3-input w3-border")
        p
          label(class="w3-text-grey") *Palavra-Passe
          input(type="password" id="password" name="password" placeholder="Password" class="w3-input w3-border")
        p
          label(class="w3-text-grey") *Confirmar Palavra-Passe
          input(type="password" id="password2" name="password2" placeholder="Password" class="w3-input w3-border") 
        p
          label(class="w3-text-grey") Data de Nascimento
          input(type="date" id="dataNascimento" name="dataNascimento" class= "w3-input w3-border" placeholder="MM-DD-YYYY")
        p
          label(class="w3-text-grey") *Email
          input(type="email" id="email" name="email" placeholder="Email" class="w3-input w3-border")
        p
          label(class="w3-text-grey") *Primeiro Nome
          input(type="text" id="pnome" name="pnome" placeholder="Primeiro Nome" class="w3-input w3-border")
        p
          label(class="w3-text-grey") *Ultimo Nome
          input(type="text" id="unome" name="unome" placeholder="Ultimo Nome" class="w3-input w3-border")
        p
          label(class="w3-text-grey") *Sexo  
          input(type="checkbox" id="masculino" name="sexo" value="masculino" class="w3-check")
          label(class="w3-text-grey") Masculino 
          input(type="checkbox" id="feminino" name="sexo" value="feminino" class="w3-check")
          label(class="w3-text-grey") Feminino 
        p
          label(class="w3-text-grey") Fotografia    
          input(type="file" id="fotografia" name="fotografia" placeholder="Fotografia" class="w3-input w3-border")
        p
          input(type="submit" class="w3-btn w3-grey w3-round w3-text-white" value="registar")
  